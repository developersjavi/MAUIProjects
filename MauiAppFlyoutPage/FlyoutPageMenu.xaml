<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="MauiAppFlyoutPage.FlyoutPageMenu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiAppFlyoutPage"
    Title="FlyoutPage"
    FlyoutLayoutBehavior="Popover">

    <FlyoutPage.Flyout>
        <!--  Menu Page  -->
        <pages:Menu />
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <!--  Main content page  -->
                <pages:Page1 />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>