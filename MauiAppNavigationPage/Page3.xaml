<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppNavigationPage.Page3"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Page 3">
    <VerticalStackLayout>
        <Label
            FontSize="48"
            HorizontalOptions="Center"
            Text="PAGE 03"
            VerticalOptions="Center" />
        <Grid ColumnDefinitions="Auto, *, Auto">
            <Button
                Grid.Column="0"
                Clicked="GoBack"
                HorizontalOptions="Start"
                Text=" ❮   Go Back" />

            <!--  Coluna do meio para empurrar os botões  -->
            <BoxView Grid.Column="1" Color="Transparent" />

            <Button
                Grid.Column="2"
                Clicked="GoBackToRoot"
                HorizontalOptions="Start"
                Text=" ❮   Go Back to Root" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>