<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppNavigationPage.Page2"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Page 2">
    <VerticalStackLayout>
        <Label
            FontSize="48"
            HorizontalOptions="Center"
            Text="PAGE 02"
            VerticalOptions="Center" />


        <Grid ColumnDefinitions="Auto, *, Auto">

            <Button
                Grid.Column="0"
                Clicked="GoBack"
                Text="❮ Go Back" />

            <!--  Coluna do meio para empurrar os botões  -->
            <BoxView Grid.Column="1" Color="Transparent" />

            <Button
                Grid.Column="2"
                Clicked="GoToNextPage"
                Text="Next ❯" />

        </Grid>


    </VerticalStackLayout>
</ContentPage>